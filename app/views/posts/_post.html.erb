<div class="bg-gray-100 shadow-lg card rounded mb-3">
  <div class="p-4 space-y-4 px-10">
    <h4 class="text-lg font-semibold text-gray-900">
      <%= post.title %> 
    </h4>
    <div class="text-gray-500 mb-2">
      <em>Por <%= post.author %> (<%= l post.created_at, format: :short %>)</em>
    </div>
    <p class="text-gray-700">
      <%= post.body %>
    </p>
    <p class="text-gray-500">
      <%= pluralize(post.comments.count, 'comentÃ¡rio') %>
    </p>
    <div class="mt-3 flex space-x-2">
      <%= button_to 'Ler artigo', post_path(post), method: :get, class: 'bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 sm:px-4 px-1 rounded cursor-pointer' %>
      <%= button_to 'Editar', edit_post_path(post), method: :get, class: 'bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 sm:px-4 px-1 rounded cursor-pointer' %>
      <%= button_to 'Apagar', post_path(post), method: :delete, class: 'bg-red-500 hover:bg-red-600 text-white font-semibold py-2 sm:px-4 px-1 rounded cursor-pointer', data: { confirm: 'Tem certeza?' } %>
    </div>
  </div>
</div>
